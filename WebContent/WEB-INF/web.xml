<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://java.sun.com/xml/ns/javaee" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd" id="WebApp_ID" version="3.0">
  <display-name>LOA</display-name>
  <welcome-file-list>
    <welcome-file>index.jsp</welcome-file>
  </welcome-file-list>
  <servlet>
      <servlet-name>GameRestAPI</servlet-name>
      <servlet-class>org.glassfish.jersey.servlet.ServletContainer</servlet-class>
         <init-param>
            <param-name>jersey.config.server.provider.packages</param-name>
            <param-value>com.ai.controller;com.ai.servlet</param-value>
         </init-param>
   </servlet>
   <servlet-mapping>
  	<servlet-name>GameRestAPI</servlet-name>
    <url-pattern>/api/*</url-pattern>
   </servlet-mapping>
	<servlet>
	   <servlet-name>GameServer</servlet-name>
	   <servlet-class>com.ai.servlet.GameServerServlet</servlet-class>
	</servlet>
	<servlet-mapping>
   		<servlet-name>GameServer</servlet-name>
   		<url-pattern>/setGame</url-pattern>
	</servlet-mapping>
	<servlet>
	    <servlet-name>TwitterStart</servlet-name>
	    <servlet-class>com.ai.servlet.BootServlet</servlet-class>
	    <load-on-startup>1</load-on-startup>
	</servlet>
  <servlet>
    <servlet-name>newgame</servlet-name>
    <jsp-file>/loa.jsp</jsp-file>
  </servlet>
</web-app>